<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants full CRUD access to Project Management custom objects.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Project Management User</label>

    <!-- Field Permissions: Project__c (excluding required field Status__c) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Project__c.Client__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Project__c.Start_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Project__c.End_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Project__c.Total_Estimated_Hours__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Project__c.Total_Actual_Hours__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Project__c.Work_Item_Count__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Field Permissions: Work_Item__c (excluding MD field Project__c and required field Status__c) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Assigned_To__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Priority__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Type__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Estimated_Hours__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>Work_Item__c.Actual_Hours__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Due_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Completed_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Work_Item__c.Description__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Field Permissions: Time_Entry__c (excluding MD field Work_Item__c and required fields) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Time_Entry__c.Notes__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Project__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Work_Item__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Time_Entry__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Tab Visibilities -->
    <tabSettings>
        <tab>Project__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>Work_Item__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>Time_Entry__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
