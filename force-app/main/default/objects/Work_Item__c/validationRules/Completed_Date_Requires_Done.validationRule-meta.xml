<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Completed_Date_Requires_Done</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Completed_Date__c)),
    NOT(ISPICKVAL(Status__c, "Done"))
)</errorConditionFormula>
    <errorDisplayField>Completed_Date__c</errorDisplayField>
    <errorMessage>Completed Date can only be set when Status is Done.</errorMessage>
</ValidationRule>
